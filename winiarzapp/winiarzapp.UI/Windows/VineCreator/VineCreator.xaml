        <Label Content="Będziesz potrzebować:" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.259,0.524" Width="180"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="20,75,0,0" TextWrapping="Wrap" Text="Wpisz ilość" VerticalAlignment="Top" Width="74"/>
        <Label Content="L" HorizontalAlignment="Left" Margin="99,73,0,0" VerticalAlignment="Top"/>
        <ListView HorizontalAlignment="Left" Height="100" Margin="20,134,0,0" VerticalAlignment="Top" Width="170">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Otrzymasz" HorizontalAlignment="Left" Margin="10,249,0,0" VerticalAlignment="Top"/>
        <Label Content="litrów" HorizontalAlignment="Left" Margin="75,249,0,0" VerticalAlignment="Top" Width="110"/>
        <Button Content="Dodaj do historii" HorizontalAlignment="Left" Margin="20,280,0,0" VerticalAlignment="Top" Width="170" Click="Button_Click_AddToHistory"/>
        <CheckBox Content="Dodaj komentarz" HorizontalAlignment="Left" Margin="20,318,0,0" VerticalAlignment="Top" Width="170" Height="27" FontSize="14" FontStyle="Italic" Checked="CheckBox_Checked"/>
        <TextBox HorizontalAlignment="Left" Height="96" Margin="10,345,0,0" TextWrapping="Wrap" Text="Tu wpisz swój komentarz." VerticalAlignment="Top" Width="240"/>
