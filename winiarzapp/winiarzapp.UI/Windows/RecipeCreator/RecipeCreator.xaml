<Window x:Class="winiarzapp.UI.Windows.RecipeCreator.RecipeCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:winiarzapp.UI.Windows.RecipeCreator"
        mc:Ignorable="d"
        Title="Dodaj przepis" Height="414" Width="490" VerticalAlignment="Bottom">
    <Grid>
        <TextBox x:Name="recipeNameTextBox" HorizontalAlignment="Left" Height="23" Margin="10,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187"/>
        <TextBox x:Name="recipeDescriptionTextBox" Height="65" Margin="10,80,100,0" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalContentAlignment="Stretch"/>
        <Label Content="Opis przepisu" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Width="118"/>
        <Label Content="Nazwa" HorizontalAlignment="Left" Margin="10,7,0,0" VerticalAlignment="Top" Width="118"/>
        <DataGrid x:Name="dataGrid"  VerticalContentAlignment="Stretch" Margin="0,150,0,0"/>
        <Button Content="Utwórz" HorizontalAlignment="Right" Margin="0,40,10,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
